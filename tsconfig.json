{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src", // Add this line
    "paths": {         // Add this block
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"], // if you have a 'lib' folder in src/
      // You can also add more specific aliases if needed, but '@/components/*' should cover the UI components
    }
  },
  "include": [
    "src"
  ]
}